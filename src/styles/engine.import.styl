.hybrid-dom-scene
  height: 100%;
  overflow: hidden;
  position: absolute;
  transform-style: preserve-3d;
  width: 100%;

.hybrid-dom-camera
  transform-style: preserve-3d;

.hybrid-dom-node
  backface-visibility: visible;
  box-sizing: border-box;
  overflow: hidden;
  pointer-events: auto;
  position: absolute;
  transform-origin: 0% 0%;
